{
  "edit_predictions": {
    "mode": "subtle"
  },
  "features": {
    "edit_prediction_provider": "copilot"
  },
  "agent": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-haiku-4.5"
    },
    "model_parameters": []
  },
  "$schema": "zed://schemas/settings",

  "auto_install_extensions": {
    "astro": true,
    "basher": true,
    "catppuccin": true,
    "catppuccin-icons": true,
    "codebook": true,
    "dockerfile": true,
    "emmet": true,
    "git-firefly": true,
    "gosum": true,
    "html": true,
    "ini": true,
    "latex": true,
    "ledger": true,
    "lua": true,
    "marksman": true,
    "toml": true,
  },

  "audio": {
    "experimental.auto_microphone_volume": true,
    "experimental.auto_speaker_volume": true,
    "experimental.rodio_audio": true,
  },
  "auto_signature_help": true,
  "buffer_font_fallbacks": ["Symbols Nerd Font"],
  "buffer_font_family": "Input Mono",
  "buffer_font_features": {},
  "buffer_font_size": 16,
  "buffer_line_height": "standard",
  "calls": {
    "mute_on_join": true,
  },
  "colorize_brackets": true,
  "cursor_blink": false,
  "gutter": {
    "min_line_number_digits": 3,
  },
  "icon_theme": {
    "dark": "Catppuccin Mocha",
    "light": "Catppuccin Latte",
    "mode": "system",
  },
  "indent_guides": {
    "active_line_width": 10,
    "background_coloring": "disabled",
    "coloring": "indent_aware",
    "line_width": 2,
  },
  "minimap": {
    "show": "auto",
    "thumb": "always",
  },
  "prettier": {
    "allowed": true,
  },
  "project_panel": {
    "entry_spacing": "standard",
  },
  "redact_private_values": true,
  "relative_line_numbers": "enabled",
  "search": {
    "center_on_match": true,
    "regex": true,
  },
  "show_signature_help_after_edits": true,
  "show_whitespaces": "selection",
  "sticky_scroll": {
    "enabled": true,
  },
  "tab_bar": {
    "show": true,
  },
  "tabs": {
    "close_position": "right",
    "file_icons": true,
    "git_status": true,
  },
  "terminal": {
    "copy_on_select": true,
    "keep_selection_on_copy": true,
  },
  "theme": {
    "dark": "Catppuccin Mocha",
    "light": "Catppuccin Latte",
    "mode": "system",
  },
  "title_bar": {
    "show_branch_icon": true,
    "show_menus": false,
  },
  "toolbar": {
    "code_actions": true,
  },
  "ui_font_family": "Input Sans",
  "ui_font_features": {
    "calt": false,
  },
  "ui_font_size": 14,
  "use_smartcase_search": true,
  "vertical_scroll_margin": 4,
  "vim_mode": true,
  "window_decorations": "client",
  "wrap_guides": [80, 100, 120],
}
