# Define names for default workspaces for which we configure key bindings later on.
# We use variables to avoid repeating the names in multiple places.
set $ws0 "0:ARCH" 
set $ws1 "1:FILE"
set $ws2 "2:EDIT"
set $ws3 "3:TERM"
set $ws4 "4:MISC"
set $ws5 "5:CHAT"
set $ws6 "6:MEDIA"
set $ws7 "7:BROWSER"


# switch to workspace
bindsym $mod+a          workspace number $ws0
bindsym $mod+o          workspace number $ws1
bindsym $mod+e          workspace number $ws2
bindsym $mod+u          workspace number $ws3
bindsym $mod+semicolon  workspace number $ws4
bindsym $mod+comma      workspace number $ws5
bindsym $mod+period     workspace number $ws6
bindsym $mod+p          workspace number $ws7

# move focused container to workspace
Bindsym $mod+Shift+a            move container to workspace number $ws0
bindsym $mod+Shift+o            move container to workspace number $ws1
bindsym $mod+Shift+e            move container to workspace number $ws2
bindsym $mod+Shift+u            move container to workspace number $ws3
bindsym $mod+Shift+semicolon    move container to workspace number $ws4
bindsym $mod+Shift+comma        move container to workspace number $ws5
bindsym $mod+Shift+period       move container to workspace number $ws6
bindsym $mod+Shift+p            move container to workspace number $ws7

bindsym $mod+Shift+w move workspace to output right
bindsym $mod+Shift+v move workspace to output left

bindsym $mod+Tab workspace next
bindsym $mod+Shift+Tab workspace prev

