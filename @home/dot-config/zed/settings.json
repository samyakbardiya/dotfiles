{
  "theme": {
    "mode": "system",
    "light": "Catppuccin Latte - No Italics",
    "dark": "Catppuccin Mocha - No Italics"
  },
  "buffer_font_family": "InputMono Nerd Font",
  "buffer_font_size": 16,
  "buffer_line_height": "standard",
  "ui_font_family": "Input Sans",
  "ui_font_size": 14,
  "vim_mode": true,
  "cursor_blink": false,
  "wrap_guides": [80, 100, 120],
  "redact_private_values": true,
  "indent_guides": {
    "coloring": "indent_aware"
    // "background_coloring": "indent_aware"
  },
  "vertical_scroll_margin": 4,
  "inlay_hints": {
    "enabled": true
  },
  "project_panel": {
    // "dock": "right",
    "indent_size": 12,
    "auto_fold_dirs": true
  },
  "outline_panel": {
    // "dock": "right",
    "indent_size": 16
  },
  "tabs": {
    "git_status": true
  },
  "preview_tabs": {
    "enabled": false,
    "enable_preview_from_file_finder": true,
    "enable_preview_from_code_navigation": true
  },
  "telemetry": {
    "metrics": false
  },
  "vim": {
    "use_smartcase_find": true
  },
  "line_indicator_format": "short"

