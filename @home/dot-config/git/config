[commit]
  gpgsign = true

[core]
  excludesfile = ~/.config/git/ignore

[diff]
  tool = nvimdiff

[difftool]
  prompt = false

[difftool "nvimdiff"]
  cmd = nvim -d "$LOCAL" "$REMOTE"

[init]
  defaultbranch = main

[push]
  autosetupremote = true

[user]
  name = Samyak Bardiya
  email = <>

[includeIf "gitdir:~/.config/"]
  path = ~/.config/git/config_personal

[includeIf "gitdir:~/code/"]
  path = ~/.config/git/config_personal

[includeIf "gitdir:~/Documents/"]
  path = ~/.config/git/config_personal

[includeIf "gitdir:~/work/"]
  path = ~/.config/git/config_work

