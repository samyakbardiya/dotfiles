#!/bin/sh

# set layout
xmodmap $XDG_CONFIG_HOME/X11/Xmodmap

# increase key press raate
xset r rate 250 50

# make caps as escape + hyper_l | control_l
killall xcape
xcape -e 'Control_L=Escape'

